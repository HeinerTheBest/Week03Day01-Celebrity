<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgPictureDemo"
                android:layout_width="150dp"
                android:layout_margin="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="150dp"
                android:src="@drawable/spiderman" />

            <ImageView
                android:id="@+id/btnFavorite"
                android:src="@drawable/favorite_off"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="8dp"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:id="@+id/tvAllTheName"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/imgPictureDemo"
                app:layout_constraintEnd_toStartOf="@id/btnFavorite"
                app:layout_constraintBottom_toTopOf="@id/btnDelete"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="12dp"
                android:text="Name with last name Demo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnDelete"
                android:text="Delete"
                android:textColor="@color/colorRed"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvAllTheName"
                app:layout_constraintStart_toEndOf="@id/imgPictureDemo"
                app:layout_constraintBottom_toTopOf="@id/btnDetail"
                android:layout_margin="5dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnUpdate"
                android:text="Update"
                app:layout_constraintStart_toEndOf="@id/btnDelete"
                app:layout_constraintTop_toBottomOf="@id/tvAllTheName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/btnDetail"
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnDetail"
                android:text="Detail"
                app:layout_constraintStart_toStartOf="@id/btnDelete"
                app:layout_constraintTop_toBottomOf="@id/btnDelete"
                app:layout_constraintEnd_toEndOf="@id/btnUpdate"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                android:layout_height="wrap_content" />



        </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
